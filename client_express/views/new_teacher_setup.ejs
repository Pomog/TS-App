<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TS-App New Teacher Experience</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 20px;
            width: 40%;
        }
        .footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">TS-App</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Schedule</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Rating</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">New Lesson</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Finances</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Messages</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>Welcome, New Teacher!</h2>
        <p>Please complete your profile by filling out the information below.</p>
        
        <form>
            <div class="form-group">
                <label for="teacherName">Full Name</label>
                <input type="text" class="form-control" id="teacherName" placeholder="Enter your full name" required>
            </div>
            <div class="form-group">
                <label for="teacherEmail">Email</label>
                <input type="email" class="form-control" id="teacherEmail" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="teacherExperience">Teaching Experience</label>
                <textarea class="form-control" id="teacherExperience" rows="3" placeholder="Describe your teaching experience" required></textarea>
            </div>
            <div class="form-group">
                <label for="teacherAvailability">Availability</label>
                <input type="text" class="form-control" id="teacherAvailability" placeholder="Enter your availability (e.g., weekdays 9 AM - 5 PM)" required>
            </div>
            <div class="form-group">
                <label for="lessonFees">Lesson Fees</label>
                <input type="number" class="form-control" id="lessonFees" placeholder="Enter your lesson fee per hour" required>
            </div>

            <h4>Select Subjects and Levels</h4>
            <% if (locals.categories) { %>
            <% for (let category in categories) { %>
                <div class="form-group">
                    <label for="<%= category %>"><%= category %></label>
                    <select multiple class="form-control" id="<%= category %>">
                        <% if (Array.isArray(categories[category])) { %>
                            <% categories[category].forEach(subject => { %>
                                <option value="<%= subject %>"><%= subject %></option>
                            <% }); %>
                        <% } else { %>
                            <% for (let subject in categories[category]) { %>
                                <optgroup label="<%= subject %>">
                                    <% categories[category][subject].forEach(level => { %>
                                        <option value="<%= level %>"><%= level %></option>
                                    <% }); %>
                                </optgroup>
                            <% } %>
                        <% } %>
                    </select>
                </div>
            <% } %>
            <% } else { %>
                <p>ERROR: Can't fetch data for categories...</p>
            <% } %>

            <h5>Can't find needed category? Add a new category and level:</h5>
            <div class="form-group">
                <label for="newCategory">New Category</label>
                <input type="text" class="form-control" id="newCategory" placeholder="Enter new category">
            </div>
            <div class="form-group">
                <label for="newLevel">New Level</label>
                <input type="text" class="form-control" id="newLevel" placeholder="Enter new level">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="footer">
        <p>&copy; 2024 TS-App. All rights reserved.</p>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
